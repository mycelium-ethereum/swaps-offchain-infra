{
    "compileOnSave": false,
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        },
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@mycelium-ethereum/swaps-js": ["packages/swaps-js/src/index.ts"],
            "@mycelium-ethereum/swaps-js/*": ["packages/swaps-js/src/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
