{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@mycelium-ethereum/swaps-js": ["packages/swaps-js/src/index.ts"],
            "@mycelium-ethereum/test": ["packages/test/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
